mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video#jsVideo(src=video.src poster=video.thumbnail playsinline)
        .loading#jsLoading
            .dot
            .dot
            .dot
            .dot
        .videoPlayer__controls
            .videoPlayer__column
                span#jsCurrentTime 00:00:00
                |/&nbsp;&nbsp;
                span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                .volume__box
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    .videoPlayer__volumeRange-box
                        input.video__volume-range#jsVolumeRange(type="range", min="0", max="1", step="0.01", value="0.5")
                span#jsFullscreenBtn.fullscreenBtn
                    i.fas.fa-expand-alt