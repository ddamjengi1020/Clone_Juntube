extends layouts/main
include mixins/videoPlayer

block content
    .video__container
        +videoPlayer({
            src: video.fileUrl
        })
        .video__info
            if loggedUser !== null
                if loggedUser.id === video.creator.id
                    a(href=routes.editVideo(video.id)).edit-btn Edit video
            h6.video__createdAt=video.createdAt 
            span.video__view=`views ${video.view}` 
            h5.video__title=video.title
            p.video__description= video.description
        .video__author
            |Upload by 
            a(href=routes.userDetail(video.creator.id))=video.creator.name
        .video__comments
            if video.comments.length <= 1
                span.video__comments-number
                    span#jsFakeComment=video.comments.length
                    |   comment
            else 
                span.video__comments-number
                    span#jsFakeComment=video.comments.length
                    |   comments
            form.add__comment#jsAddComment
                input(type="text", placeholder="Add Comment")
            ul.video__comments-list#jsCommentList
                each comment in video.comments.reverse()
                    li
                        span=comment.text 
                        span.user__info 
                            span.comment-username=comment.user
                            img.comment-avatar#jsCommentAvatar(src=`/${comment.avatarUrl}`)
