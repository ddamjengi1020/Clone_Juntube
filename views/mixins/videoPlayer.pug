mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}#t=5`)
        .videoPlayer__controls#jsControlBox
            .videoPlayer__column
                .volume__box
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    .videoPlayer__volumeRange-box
                        input.video__volume-range#jsVolumeRange(type="range", min="0", max="1", step="0.01", value="0.5")
                span
                    span#jsCurrentTime 00:00:00
                    |/
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullscreenBtn
                    i.fas.fa-expand-alt